<!DOCTYPE html>
<html>
  <thead>
    <title>Lista de produtos</title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
  </thead>
  <body>
    <h1>Listagem de Produtos</h1>
    <p>Produtos já cadastrados no sistema</p>
    <table style="width:50%">
      <thead>
      <tr style="background-color: #CCC">
        <td style="width:30%">Nome</td>
        <td style="width:20%">Descrição</td>
        <td style="width:15%">Valor de compra</td>
        <td style="width:15%">Valor de venda</td>
        <td colspan="2" style="width:20%">Ações</td>

      
      </tr>
      </thead>
      <tbody>
        <% if(!docs || docs.length == 0){ %> 
          <tr>
            <td colspan='4'>Nenhum produto cadastrado</td>

          </tr>

        <% } else { 
          docs.forEach(function(customer){ %>
            <tr>
              <td style='width:30%'><%= customer.nomeProduto %></td>
              <td style='width:20%'><%= customer.descProduto %></td>
              <td style='width:15%'><%= customer.compraProduto %></td>
              <td style='width:15%'><%= customer.vendaProduto %></td>
              <td style='width:20%'>
                <a href="/produto/delete/<%= customer._id %>" onclick="return confirm('Tem certeza?');">Excluir</a>
                
              </td>
              <td style='width:20%'>
                <a href="/produto/edit/<%= customer._id %>"  title="alterar Produto" >Alterar</a>

              </td>
            </tr>

          <% })
        }%>
      </tbody>
      <tfoot>
        <tr>
          <td colspan="4">
            <a href="/novoproduto">Cadastrar Novo Produto</a></br>
            <a href="/">Voltar ao início</a>
          </td>
        </tr>
      </tfoot>
      
    </table>
  
  </body>
</html>
